{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "outDir": "./dist",
      "resolveJsonModule": true
    },
    "include": ["services/**/*", "utils/**/*", "abi/**/*"],
    "exclude": ["node_modules"]
  }